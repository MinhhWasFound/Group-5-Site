@import url('https://fonts.googleapis.com/css2?family=Allura&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap');
/* smooth scroll n' sth */

html {
    scroll-behavior: smooth;
}

/* ------------------- */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;

}

body {
    background-color: #FFDEE9;
    background-image: linear-gradient(0deg, #FFDEE9 0%, #B5FFFC 100%);
    background-repeat: no-repeat;
    line-height: 1.6;
    /* font face */
    font-family: 'Open Sans';
    font-style: normal;
    font-weight: 300 800;
    font-stretch: 100%;
}

main {
    padding: 32px 16px;
    margin-top: none;
}

section {
    text-transform: none;
    padding: 54px 16px;
    /* margin: 32px 0;      */
    border: 10px;
    align-content: center;
    min-height: 100vh;
    text-align: justify;
}

/*----*/
div hr {
    border: none;
    border-top: 1.5px solid #7e915e;
    width: 35%;
    margin: 12px auto
}
h1, h2, h3, h4, h5, h6{
    color: #7e915e;
}

div p, h1, h2, h3, h4, h5, h6, ol, ul, li{   
    padding: 14px 16px;
}

ol, ul {
    list-style: none;
    display: flex;
    flex-direction: row;
    align-content: center;
    flex-wrap: wrap;
    justify-content: center;
}


/* Nav bar */

.navbar {
    font-size: 16px;
    overflow: hidden;
    background-color: #ffF;
    position: fixed;
    top: 0;
    width: 100%;
    border-bottom: solid 1px #a0a0a080;
    display: flex;
    flex-wrap: nowrap;
    flex-direction: row;
}

.navbar a {
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
}

.navbar a:hover {
    background: rgba(0, 0, 0, 0.025);
    /* color: #000 !important; */
}

/* src : cssgradient.io*/
.btn-grad{
    background-image: linear-gradient(to right, #1FA2FF 0%, #12D8FA 51%, #1FA2FF 100%);
    transition: 0.5s ease-in-out; 
}

.btn-grad {
    margin: 10px;    
    padding: 15px 45px;    
    text-align: center; ;    
    /* transition: 0.5s ease-in-out;     */
    background-size: 200% auto;    
    color: white;    
    box-shadow: 5px 5px 20px #fff;     
    border-radius: 10px;    
    display: block;
    text-shadow: 0 0 10px #fff;
}

.btn-grad:hover{
    /* transition: 0.5s; */
    background-position: right center; /* change the direction of the change here */
    color: #fff !important;
    text-shadow: 0 0 10px #000 ;
    text-decoration: none;
}
.btn-grad:link{
    transition:.25s ease-in-out;
}

/*---------------*/

/* hyperl hover */
a {
    border-bottom-color: transparent;
    color: inherit;
    text-decoration: none;
}

a:hover {
    color: #2ebaae !important;
    text-shadow: 0 0 3px ;
}

a:link {
    text-decoration: none;
    transition: .2s ease-in-out;
}

footer {
    background: #2d3436;
    color: #fff;
    padding: 16px;
    margin-top: 32px;
}
